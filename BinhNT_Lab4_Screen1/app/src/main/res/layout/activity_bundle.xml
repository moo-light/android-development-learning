<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="50"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".BundleIntentActivity">
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="String"
        android:textSize="30dp"
        android:layout_weight="1"
        android:layout_marginVertical="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvString"
        android:textSize="20dp"
        android:text=""/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Number"
        android:textSize="30dp"
        android:layout_weight="1"
        android:layout_marginVertical="20dp"  android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNumber"
        android:textSize="20dp"
        android:text=""/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Array"
        android:textSize="30dp"
        android:layout_weight="1"
        android:layout_marginVertical="20dp"   android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvArray"
        android:textSize="20dp"
        android:text=""/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Object"
        android:textSize="30dp"
        android:layout_weight="1"
        android:layout_marginVertical="20dp"  android:textStyle="bold"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvObjectName"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvObjectDesc"
        android:textSize="20dp"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvObjectCalo"
        android:textSize="20dp"
        android:text=""/>
</LinearLayout>